.main-sidebar
    .sidebar-inner
        for interiorView of views
            .sidebar-item
                .sidebar-item-inner
                    if (interiorView.titles && interiorView.titles.length)
                        ul.sidebar-item-list
                            for title of interiorView.titles
                                - let active = view.title === title.content;
                                a(href= `${interiorView.url}#${title.content === interiorView.title ? "" : title.fragment}`)
                                    li(class= `item-type-${title.tagName} ${active ? "sidebar-active" : ""} ${view.title !== interiorView.title && title.tagName !== "H1" ? "hide" : ""}`)
                                        |#{title.content}