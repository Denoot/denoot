

header(class=`${lightHeader ? "" : "white-bg-1"}`)
    .header-inner
        .header-row
            .logo
                a(href="/" alt="home")
                    .logo-inner
                        img(src= "/static/circle-cropped.png" alt="Denoot logo")
                        h1
                            |Denoot
        .header-row.header-search-cont
            form.header-search(action="GET" onsubmit="return false;") 
                input(type= "text" placeholder="Search")
            .auto-complete-menu
                |

        nav.header-row.header-row
            for item of headerItems
                .header-item
                    a(href= item.path)
                        .header-item-inner
                            .header-item-meta.header-item-name= item.name
                            if (item.icon)
                                .header-item-meta.header-item-icon!= item.icon
        .header-row
            .burger!= burgerIcon
    .mobile-header.white-bg-1
        .mobile-header-cont
            nav.header-row.header-row
                for item of headerItems
                    .header-item.white-bg-1
                        a(href= item.path)
                            .header-item-inner
                                .header-item-meta.header-item-name= item.name
                                if (item.icon)
                                    .header-item-meta.header-item-icon!= item.icon